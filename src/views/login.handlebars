<header>
  <div class="up_page">
    {{>header}}
    </div>
  </div>
  {{>menu}}
</header>

<main>
<form onsubmit="login(event)" id="formLogin" action="/api/sessions/login" method="post">
  <div class="imgcontainer">
    <img
      src="https://i.postimg.cc/VkzpZyKM/storyline-laptop-with-cat.png"
      alt="Avatar"
      class="avatar"
    />
  </div>

  <div class="container_form">


    <label for="email"><b>Email</b></label>
    <input class="form_input" type="email" placeholder="Enter Email" name="email" />

    <label for="password"><b>Password</b></label>
    <input  class="form_input"  type="password" placeholder="Enter Password" name="password" />

   <div class="button-container">
  <button class="button_form" type="submit" >Login</button>
</div>
  </div>
</form>

<div class="registration_login">
    <p class="register_msg"> Not registered yet?</p>
    <a href="/register"><button class="register_login_button">Register</button></a>
</div>
</main>

<footer></footer>

<script src="/assets/js/login.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
document.addEventListener('DOMContentLoaded', function() {
  const params = new URLSearchParams(window.location.search);
  const message = params.get('message');
  
  if (message) {
    Swal.fire({
        imageUrl: "https://i.postimg.cc/ZqrV8yL4/cat.png",
        background: "white",
        text: message,
        confirmButtonText: "OK",
        confirmButtonColor: "black",
    });
  }
});
</script>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const params = new URLSearchParams(window.location.search);
  const error = params.get('error');
  
  if (error) {
    Swal.fire({
        imageUrl: "https://i.postimg.cc/g0qCjgXP/icons8-geisha-64-2.png",
        background: "white",
        text: error,
        confirmButtonText: "OK",
        confirmButtonColor: "black",
    });
  }
});
</script>

