<header>
  <div class="up_page">
    <a href="/home"><img
        class="logo"
        src="https://i.postimg.cc/JzVpc1S5/logo-header.png"
        alt="logo"
        width="80"
      /></a>
  </div>
  <nav class="navbar">
    <a href="/home">Home</a>
    <a href="/products">Products Data</a>
    <a href="/realtimeproducts">Update Products</a>
    <a href="/chat">Chat</a>
  </nav>

  <h1 class="titulo"> Horisada´s Paintings </h1>
  <h4 class="greeting">いらっしゃいませ</h4>

  <div class="div_space"></div>

</header>

<main>

  <h2 class="subtitulo"> Products Data </h2>

  <div class="pagination">
    <ul>
      <li><a href="/products?page=1">Catalog</a></li>
      {{#if hasPrevPage}}
        <li><a href="/products?page={{prevPage}}">Previous</a></li>
      {{/if}}
      {{#if hasNextPage}}
        &nbsp;
        {{currentpage}}
        /
        {{totalPages}}
        &nbsp;
      {{/if}}
      {{#if hasNextPage}}
        <li><a href="/products?page={{nextPage}}">Next</a></li>
      {{/if}}
      {{#if nextPage}}
        <li><a href="/products?page={{totalPages}}">View Last in Catalog</a></li>
      {{/if}}
    </ul>
  </div>

  <input type="text" value="{{cartId}}" hidden id="cartId" />

  <a class="goToCart" href="/carts/{{cartId}}">Go to Cart</a>

  <div class="table_container">
    {{#each products}}
      <div class="container_cards">
        <div class="card">
          <img src="{{thumbnail}}" class="card-img-top" alt="{{title}}" />
          <div class="card-body">
            <p>{{title}}</p>
            <p> {{description}} </p>
            <p> Category: {{category}}</p>
            <p>Us${{price}}</p>
            <p> Stock: {{stock}}</p>
            <button class="btn_cart" onclick="buy('{{_id}}')">Add to Cart
            </button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</main>

<a href="/carts/{{cartId}}">Go to Cart</a>

<footer></footer>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/assets/js/products.js"></script>